package pages

import "go-star/dal"
import "go-star/layout"

templ RoomsList(rooms []dal.Room) {
	@layout.Page("Chat Rooms", "Select a room to join") {
		<div class="columns is-multiline">
			for _, item := range rooms {
				<div class="column is-one-third">
					<div class="box">
						<h2>{ item.Name }</h2>
						<p>{ item.Description }</p>
					</div>
				</div>
			}
		</div>
	}
}
